{% extends 'base.html.twig' %}

{% block title %}Вход{% endblock %}

{% block body %}
<h1>Вход</h1>

{% if error %}
    <div style="color: red; margin-bottom: 15px;">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form method="post">
    <div class="mb-3">
        <label for="phone">Телефон</label>
        <input type="text" name="phone" id="phone" value="{{ last_username }}" required class="form-control">
    </div>

    <div class="mb-3">
        <label for="password">Пароль</label>
        <input type="password" name="password" id="password" required class="form-control">
    </div>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

    <button type="submit" class="btn btn-primary">Войти</button>
</form>

<a href="{{ path('app_register') }}">Нет аккаунта? Зарегистрироваться</a>
{% endblock %}