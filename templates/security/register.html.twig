{% extends 'base.html.twig' %}

{% block title %}Регистрация{% endblock %}

{% block body %}
<h1>Регистрация</h1>

{{ form_start(form) }}
    {{ form_row(form.name, {'label': 'Имя'}) }}
    {{ form_row(form.phone, {'label': 'Телефон'}) }}
    {{ form_row(form.plainPassword.first, {'label': 'Пароль'}) }}
    {{ form_row(form.plainPassword.second, {'label': 'Повторите пароль'}) }}

    <button type="submit" class="btn btn-primary">Зарегистрироваться</button>
{{ form_end(form) }}

<a href="{{ path('app_login') }}">Уже есть аккаунт? Войти</a>
{% endblock %}