<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Ресторан — Заказы{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
            <style>
                body { font-family: Arial, sans-serif; margin: 20px; background: #f9f9f9; }
                nav { background: #333; padding: 10px; margin-bottom: 20px; border-radius: 5px; }
                nav a { color: white; margin-right: 15px; text-decoration: none; }
                nav a:hover { text-decoration: underline; }
                .user-info { color: #ddd; float: right; }
                h1 { color: #333; }
                table { width: 100%; border-collapse: collapse; margin-top: 20px; }
                th, td { border: 1px solid #ddd; padding: 10px; text-align: left; }
                th { background: #f0f0f0; }
                a.button { background: #007bff; color: white; padding: 8px 15px; text-decoration: none; border-radius: 4px; display: inline-block; margin: 5px; }
                a.button.green { background: #28a745; }
            </style>
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        <nav>
            <div style="max-width: 1200px; margin: 0 auto;">
                <a href="{{ path('app_home'|default('/')) }}">Главная</a>

                {% if app.user %}
                    <span class="user-info">Привет, {{ app.user.name }} ({{ app.user.phone }})</span>
                    <a href="{{ path('app_order_my') }}">Мои заказы</a>
                    <a href="{{ path('app_order_new') }}">Новый заказ</a>
                    <a href="{{ path('app_logout') }}">Выход</a>
                {% else %}
                    <a href="{{ path('app_login') }}">Вход</a>
                    <a href="{{ path('app_register') }}">Регистрация</a>
                {% endif %}
            </div>
        </nav>

        <div style="max-width: 1200px; margin: 0 auto;">
            {% block body %}{% endblock %}
        </div>
    </body>
</html>